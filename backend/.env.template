# Campus Eats - Environment Configuration Template
# Copy this to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/campus_eats

# ============================================
# JWT AUTHENTICATION
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,http://localhost:8000

# ============================================
# REDIS CONFIGURATION (Optional - graceful degradation if unavailable)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment if Redis requires password

# ============================================
# SENTRY ERROR MONITORING (Optional but recommended for production)
# ============================================
# Backend Sentry DSN - Get from https://sentry.io
SENTRY_DSN=

# Environment name (development, staging, production)
ENVIRONMENT=production

# ============================================
# CLOUDINARY CONFIGURATION (Optional - for secure payment proofs)
# ============================================
# Get credentials from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# DATABASE BACKUP CONFIGURATION
# ============================================
# PostgreSQL password for automated backups
PGPASSWORD=your_postgres_password

# Backup settings (optional - defaults shown)
# BACKUP_DIR=/var/backups/campus-eats
# DB_NAME=campus_eats
# DB_USER=postgres
# DB_HOST=localhost
# DB_PORT=5432
# RETENTION_DAYS=7